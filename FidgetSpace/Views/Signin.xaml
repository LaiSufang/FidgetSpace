<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             xmlns:viewmodels="clr-namespace:FidgetSpace.Models.ViewModels"
             x:Class="FidgetSpace.Views.Signin">

    <ContentPage.BindingContext>
        <viewmodels:LoginViewModel/>
    </ContentPage.BindingContext>

    <Grid Padding="30">

        <Grid.Background>
            <LinearGradientBrush StartPoint="0,0" EndPoint="1,1">
                <GradientStop Color="#3A1C71" Offset="0.0"/>
                <GradientStop Color="#D76D77" Offset="0.5"/>
                <GradientStop Color="#FFAF7B" Offset="1.0"/>
            </LinearGradientBrush>
        </Grid.Background>

        <VerticalStackLayout VerticalOptions="Center" Spacing="15">

            <Label Text="Fidget Space"
                   HorizontalOptions="Center"
                   FontSize="32"
                   TextColor="White"
                   FontAttributes="Bold"/>
            <Label Text="LOGIN"
                   HorizontalOptions="Center"
                   FontSize="26"
                   TextColor="White"
                   />

            <Entry Placeholder="Username"
                   Text="{Binding Username}"
                   BackgroundColor="White"
                   HeightRequest="50"
                   />

            <Entry Placeholder="Password"
                   Text="{Binding Password}"
                   IsPassword="True"
                   BackgroundColor="White"
                   HeightRequest="50"
                   />

            <Button Text="Login"
                    Command="{Binding LoginCommand}"
                    BackgroundColor="#3A1C71"
                    TextColor="White"
                   
                    HeightRequest="50"/>

            <Button Text="Create account"
                    Command="{Binding GoToSignupCommand}"
                    BackgroundColor="Transparent"
                    TextColor="White"/>
        </VerticalStackLayout>
    </Grid>
</ContentPage>