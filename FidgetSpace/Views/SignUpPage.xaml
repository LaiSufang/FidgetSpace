<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             xmlns:viewmodels="clr-namespace:FidgetSpace.Models.ViewModels"
             x:Class="FidgetSpace.Views.SignupPage">

    <ContentPage.BindingContext>
        <viewmodels:SignupViewModel/>
    </ContentPage.BindingContext>

    <Grid Padding="30">

        <Grid.Background>
            <LinearGradientBrush StartPoint="0,0" EndPoint="1,1">
                <GradientStop Color="#1E3C72" Offset="0.0"/>
                <GradientStop Color="#2A5298" Offset="1.0"/>
            </LinearGradientBrush>
        </Grid.Background>

        <VerticalStackLayout VerticalOptions="Center" Spacing="15">

            <Label Text="CREATE ACCOUNT"
                   HorizontalOptions="Center"
                   FontSize="32"
                   TextColor="White"
                   FontAttributes="Bold"/>

            <Entry Placeholder="Username"
                   Text="{Binding Username}"
                   BackgroundColor="White"
                   HeightRequest="50"
                   />

            <Entry Placeholder="Password"
                   Text="{Binding Password}"
                   IsPassword="True"
                   BackgroundColor="White"
                   HeightRequest="50"
                   />
            <Entry Placeholder="Email"
                Text="{Binding Email}"
                IsPassword="True"
                BackgroundColor="White"
                HeightRequest="50"
                />
            <Entry Placeholder="Phone"
                Text="{Binding Phone}"
                IsPassword="True"
                BackgroundColor="White"
                HeightRequest="50"
                />      

            <Button Text="Sign Up"
                    Command="{Binding SignupCommand}"
                    BackgroundColor="#1E3C72"
                    TextColor="White"
                    
                    HeightRequest="50"/>

        </VerticalStackLayout>
    </Grid>
</ContentPage>
