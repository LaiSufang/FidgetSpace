<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             xmlns:viewmodels="clr-namespace:FidgetSpace.Models.ViewModels"
             x:Class="FidgetSpace.Views.SignupPage">

    <ContentPage.BindingContext>
        <viewmodels:SignupViewModel/>
    </ContentPage.BindingContext>

    <Grid Padding="30">

        <Grid.Background>
            <LinearGradientBrush StartPoint="0,0" EndPoint="1,1">
                <GradientStop Color="CadetBlue" Offset="0.0"/>
                <GradientStop Color="MediumSlateBlue" Offset="1.0"/>
            </LinearGradientBrush>
        </Grid.Background>

        <VerticalStackLayout VerticalOptions="Center"  Spacing="30">

            <Label Text="CREATE ACCOUNT"
                   HorizontalOptions="Center"
                   FontSize="32"
                   TextColor="White"
                   FontAttributes="Bold"
                   Margin="0,0,0,30"
                   />

            <Entry Placeholder="Username"
                   Text="{Binding Username}"
                   HeightRequest="50"
                   />

            <Entry Placeholder="Password"
                   Text="{Binding Password}"
                   IsPassword="True"
                   HeightRequest="50"
                   />
            <Entry Placeholder="Email"
                Text="{Binding Email}"
                HeightRequest="50"
                />
            <Entry Placeholder="Phone"
                Text="{Binding Phone}"
                HeightRequest="50"
                />      

            <Button Text="Sign Up"
                    Command="{Binding SignupCommand}"
                    BackgroundColor="CadetBlue"
                    TextColor="White"
                    Margin="0,30,0,0"
                    FontAttributes="Bold"
                    FontSize="Medium"
                    HeightRequest="50"/>

        </VerticalStackLayout>
    </Grid>
</ContentPage>
