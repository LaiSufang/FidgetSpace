<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="FidgetSpace.Views.BubbleWrapPopPage"
             >
    <Grid RowDefinitions="Auto,*">
        <VerticalStackLayout>
            <Label Text="Bubble Wrap Pop"
                   FontSize="24"
                   FontAttributes="Bold"
                   TextColor="MediumAquamarine"
                   HorizontalOptions="Center"
                   Margin="0,20,0,10"/>
            <Label Text="Pop the bubbles by tapping on them."
                   FontSize="18"
                   HorizontalOptions="Center"
                   Margin="0,0,0,20"/>
            <Grid x:Name="GameBoard"
                  Margin="10" />
        </VerticalStackLayout>
        <Grid Grid.Row="1"
          Padding="16"
          BackgroundColor="#F7F7F7"
          ColumnDefinitions="*,*">
            <Label x:Name="ScoreLbl"
               FontSize="14"
               VerticalOptions="Center" />
            <Label x:Name="TimerLbl"
               Grid.Column="1"
               FontSize="14"
               VerticalOptions="Center"
               HorizontalTextAlignment="End" />
        </Grid>
    </Grid>
</ContentPage>