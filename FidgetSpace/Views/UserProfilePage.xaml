<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             xmlns:vm="clr-namespace:FidgetSpace.Models.ViewModels"
             x:Class="FidgetSpace.Views.UserProfilePage"
             x:DataType="vm:UserProfileViewModel"
             Title="My Profile">

    <ScrollView>
        <VerticalStackLayout Padding="20" Spacing="20">

            <!-- SECTION: Basic Information -->
            <Label Text="Basic Information"
                   FontSize="18"
                   FontAttributes="Bold"
                   TextColor="#4A3AFF"/>

            <Frame CornerRadius="12"
       BackgroundColor="#F7F7FB"
       Padding="15">
                <VerticalStackLayout Spacing="12">

                    <!-- Username -->
                    <Grid ColumnDefinitions="*, Auto">
                        <Label Text="Username" TextColor="#555"/>
                        <Label Text="{Binding User.Username}"
                   Grid.Column="1"
                   TextColor="#222"
                   FontAttributes="Bold"/>
                    </Grid>

                    <BoxView HeightRequest="1" Color="#E0E0E0"/>

                    <!-- Email -->
                    <Grid ColumnDefinitions="*, Auto">
                        <Label Text="Email" TextColor="#555"/>
                        <Label Text="{Binding User.Email}"
                   Grid.Column="1"
                   TextColor="#222"
                   FontAttributes="Bold"/>
                    </Grid>

                    <BoxView HeightRequest="1" Color="#E0E0E0"/>

                    <!-- Phone -->
                    <Grid ColumnDefinitions="*, Auto">
                        <Label Text="Phone" TextColor="#555"/>
                        <Label Text="{Binding User.Phone}"
                   Grid.Column="1"
                   TextColor="#222"
                   FontAttributes="Bold"/>
                    </Grid>

                </VerticalStackLayout>
            </Frame>


            <!-- SECTION: Game Stats -->
            <Label Text="Game Stats"
                   FontSize="18"
                   FontAttributes="Bold"
                   TextColor="#4A3AFF"/>

            <Frame CornerRadius="12"
       BackgroundColor="#F7F7FB"
       Padding="15">
                <VerticalStackLayout Spacing="12">

                    <Grid ColumnDefinitions="*, Auto">
                        <Label Text="Total Time Played (s)" TextColor="#555"/>
                        <Label Text="{Binding User.TotalTimePlayedSeconds}"
                   Grid.Column="1"
                   TextColor="#222"
                   FontAttributes="Bold"/>
                    </Grid>

                    <BoxView HeightRequest="1" Color="#E0E0E0"/>

                    <Grid ColumnDefinitions="*, Auto">
                        <Label Text="Bubble Time (s)" TextColor="#555"/>
                        <Label Text="{Binding User.TotalTimeBubbleSeconds}"
                   Grid.Column="1"
                   TextColor="#222"
                   FontAttributes="Bold"/>
                    </Grid>

                    <BoxView HeightRequest="1" Color="#E0E0E0"/>

                    <Grid ColumnDefinitions="*, Auto">
                        <Label Text="Pill Game Time (s)" TextColor="#555"/>
                        <Label Text="{Binding User.TotalTimePillSeconds}"
                   Grid.Column="1"
                   TextColor="#222"
                   FontAttributes="Bold"/>
                    </Grid>

                    <BoxView HeightRequest="1" Color="#E0E0E0"/>

                    <Grid ColumnDefinitions="*, Auto">
                        <Label Text="Connect the Dots Time (s)" TextColor="#555"/>
                        <Label Text="{Binding User.TotalTimeDotSeconds}"
                   Grid.Column="1"
                   TextColor="#222"
                   FontAttributes="Bold"/>
                    </Grid>

                </VerticalStackLayout>
            </Frame>

            <!-- SECTION: Security -->
            <Label Text="Security"
                   FontSize="18"
                   FontAttributes="Bold"
                   TextColor="#4A3AFF"/>

            <Frame CornerRadius="12"
                   BackgroundColor="#F7F7FB"
                   Padding="15">

                <Grid ColumnDefinitions="*, Auto">
                    <Label Text="Password" TextColor="#555"/>
                    <Label Text="Tap to change"
                           Grid.Column="1"
                           TextColor="#4A3AFF"
                           FontAttributes="Bold"/>
                </Grid>

            </Frame>

        </VerticalStackLayout>
    </ScrollView>

</ContentPage>
