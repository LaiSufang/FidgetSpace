<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="FidgetSpace.Views.RedBluePillGamePage"
             Title="RedBluePillGamePage">

    <!--override the back button behavior-->
    <Shell.BackButtonBehavior>
        <BackButtonBehavior 
                            Command="{Binding BackCommand}"
                            IsEnabled="True"
                            IsVisible="True"
                            />
    </Shell.BackButtonBehavior>

    <!--game UI starts here-->
    <VerticalStackLayout Margin="20" Spacing="20" VerticalOptions="Center" HorizontalOptions="Center">
        
        <!--gameboard: a grid of tappable color pills-->
        <Grid x:Name="GameBoard" />

        <!--game info / status: timer-->
        <BoxView Color="AliceBlue" HeightRequest="2" WidthRequest="500"/>
        <HorizontalStackLayout Spacing="10" Margin="20">
            <Label x:Name="LbColor" Text="Target Pill:" />
            <Ellipse x:Name="EpTarget" HeightRequest="20" WidthRequest="20" Fill="Blue"/>
            <Label x:Name="LbTimer" Text="Timer: " Margin="50,0,0,0"/>
        </HorizontalStackLayout>
        <!--<BoxView Color="AliceBlue" HeightRequest="2" WidthRequest="500"/>-->
        
    </VerticalStackLayout>
</ContentPage>