<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             xmlns:vm="clr-namespace:FidgetSpace.Models.ViewModels"
             x:Class="FidgetSpace.Views.SettingsPage">

    <VerticalStackLayout Padding="30" Spacing="20">

            <Label Text="Relaxing Music Settings"
               FontSize="24"
               HorizontalOptions="Center" />

            <Switch IsToggled="{Binding MusicEnabled}" />
            <Label Text="Enable Background Music" />

            <Button Text="Save Preferences"
                Command="{Binding SaveCommand}"
                BackgroundColor="#1E3C72"
                TextColor="White" />

     </VerticalStackLayout>
</ContentPage>

